     <screen name="SimpleEmpExampleCommonDecorator">
        <section>
            <actions>
                         
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
  			<property-map resource="SimpleEmpExampleUiLabels" map-name="uiLabelMap" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.SimpleEmpExampleCompanyName" global="true"/>
  			 
         
            <!-- Including custom CSS Styles that you want to use in your application view. [] in field can be used to 
                 set the order of loading CSS files to load if there are multiple -->
            <set field="layoutSettings.styleSheets[]" value="/simpleEmpExample/css/bootstrap.min.css"/>
   
            <!-- Including custom JS that you want to use in your application view. [] in field can be used to
                 set the order of loading of JS files to load if there are multiple -->
                
                   <set field="layoutSettings.javaScripts[]" value="/common/js/util/OfbizUtil.js" global="true"/>
           <set field="layoutSettings.javaScripts[+0]" value="/simpleEmpExample/js/bootstrap.min.js" global="true"/>
           
           <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/plugins/jquery-jgrowl/1.4.1/jquery.jgrowl.min.js" global="true"/>
           
            <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/ui/js/jquery-ui-1.10.3.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/plugins/validate/jquery.validate.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/jquery-migrate-1.2.1.js" global="true"/>
                
                  <set field="layoutSettings.javaScripts[]" value="/common/js/jquery/plugins/datetimepicker/jquery-ui-timepicker-addon-1.4.3.js" global="true"/>
           
           
           
            <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/plugins/jquery.maskedinput-1.3.1.min.js"/>
           <set field="layoutSettings.javaScripts[+0]" value="/common/js/jquery/jquery-1.11.0.min.js" global="true"/>
         
   
           <!-- you configure the JS as +0, then it would be loaded above the previous one. so the last file with +0 notation would be the first one to be loaded and it our case, it would be the jquery-1.11.min.js which is waht we 
           need as the first file. -->
           
           
           
                <set field="layoutSettings.styleSheets[+0]" value="/common/js/jquery/plugins/jquery-jgrowl/1.4.1/jquery.jgrowl.min.css" global="true" />
          
            </actions>
            <widgets>           
                        <section> 
                          <widgets>
                    			<platform-specific><html><html-template location="component://simpleEmpExample/webapp/simpleEmpExample/includes/preBody.ftl"/></html></platform-specific>                    			
                    						<decorator-section-include name="pre-body"/>
                   							 <decorator-section-include name="body"/>
                   							 
                    			<platform-specific><html><html-template location="component://simpleEmpExample/webapp/simpleEmpExample/includes/postBody.ftl"/></html></platform-specific>
                </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.SimpleEmpExampleViewPermissionError}</label>
                            </fail-widgets>
                        </section>
               
            </widgets>
        </section>
    </screen>
    
    
